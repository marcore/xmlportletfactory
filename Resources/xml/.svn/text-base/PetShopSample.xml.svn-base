<?xml version="1.0" encoding="utf-8"?>
<!-- 
	If you want to generate portlets using this definition 
	  - with XMLPortletFactory instaled execute comand:
	     create petShopSample "Pet Shop Sample"
	  - and sustitute generated "petShopSample-xmlportletfactory/petShopSample.xml" 
	    with this file.
	  - execute ant comand from within petShopSample-xmlportletfactory folder.
	  - thats it. If found any problem see User Guide for help.
	  
	  Saludos, Jack.
 -->
<definition xmlns="http://www.xmlportletfactory.org/xml/xmlportletfactory" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.xmlportletfactory.org/xml/xmlportletfactory xmlportletfactory.xsd">
    <commonData>
        <client>PetCo</client>
        <projectName>PetShopSample</projectName>
        <version>1</version>
    </commonData>
    <applications>
    <!-- 
    	Were we define type of Pets: dogs, cats, etc.
	 -->
        <application>
            <classDef>
                <name>PetTypes</name>
                <title>Pet Types</title>
                <mode>	
                	<add>true</add>
                	<delete>true</delete>
                	<modify>true</modify>
                	<browse>true</browse>
                </mode>
                <generatePortlet>true</generatePortlet>
                <restrictBy>
                	<companyId>true</companyId>
                	<groupId>false</groupId>
                	<userId>false</userId> 
                </restrictBy>
            </classDef>
            <fileDef>
                <name>pettypes</name>
                <fields>
                    <field>
                        <name>petTypeId</name>
                        <title>Pet Type Id</title>
                        <type>
                            <long>
                                <length>5</length>
                                <signed>false</signed>
                                <nullable>false</nullable>
                            </long>
                        </type>
                        <showFieldInView>false</showFieldInView>
                    </field>
                    <field>
                        <name>petTypeDescription</name>
                        <title>Description</title>
                        <type>
                            <varchar>
                                <length>20</length>
                                <filter>true</filter>
                            </varchar>
                        </type>
                        <showFieldInView>true</showFieldInView>
                        <required>true</required>
                    </field>
                    <field>
                        <name>petDangerous</name>
                        <title>Is Dangerous</title>
                        <type>
                        	<boolean />
                        </type>
                        <showFieldInView>true</showFieldInView>
                    </field>
                </fields>
            </fileDef>
        </application>
    <!-- 
    	Pet file, where we store our pets 
    -->
        <application>
            <classDef>
                <name>Pets</name>
                <title>Pets</title>
                <mode>	
                	<add>true</add>
                	<delete>true</delete>
                	<modify>true</modify>
                	<browse>true</browse>
                </mode>
                <generatePortlet>true</generatePortlet>
                <restrictBy>
                	<companyId>true</companyId>
                	<groupId>false</groupId>
                	<userId>false</userId> 
                </restrictBy>
            </classDef>
            <fileDef>
                <name>pets</name>
                <fields>
                    <field>
                        <name>petId</name>
                        <title>Pet Id</title>
                        <type>
                            <long>
                                <length>5</length>
                                <signed>false</signed>
                                <nullable>false</nullable>
                            </long>
                        </type>
                        <showFieldInView>false</showFieldInView>
                    </field>
                    <field>
                        <name>petName</name>
                        <title>Name</title>
                        <type>
                            <varchar>
                                <length>40</length>
                                <filter>true</filter>
                            </varchar>
                        </type>
                        <showFieldInView>true</showFieldInView>
                        <required>true</required>
                    </field>
                    <field>
                        <name>petTypeId</name>
                        <title>Pet Type</title>
                        <type>
                            <long>
                                <length>5</length>
                                <signed>false</signed>
                                <nullable>false</nullable>
                            </long>
                        </type>
                        <validation>
                                <className>PetTypes</className>
                                <fieldName>petTypeId</fieldName>
                                <orderByField>petTypeDescription</orderByField>
                        </validation>
                        <showFieldInView>true</showFieldInView>
                    </field>
                    <field>
                    	<name>petBirthDate</name>
                    	<title>Birth Date</title>
                    	<type>
                    		<date></date>
                    	</type>
                    	<showFieldInView>true</showFieldInView>
                    </field>
                    <field>
                        <name>petComments</name>
                        <title>Coments</title>
                        <type>
                            <text></text>
                        </type>
                        <showFieldInView>false</showFieldInView>
                    </field>
                    <field>
                        <name>petPhoto</name>
                        <title>Photo</title>
                        <type>
                            <image></image>
                        </type>
                        <showFieldInView>false</showFieldInView>
                    </field>
                    <field>
                        <name>petPedigreePdf</name>
                        <title>Pedigree Pdf</title>
                        <type>
                            <document></document>
                        </type>
                        <showFieldInView>false</showFieldInView>
                    </field>
                </fields>
            </fileDef>
            <detailFiles>
                    <detailFile>
                            <detailFileClassName>PetVisits</detailFileClassName>
                            <connectionFieldName>petId</connectionFieldName>
                            <connectionTitle>Visits</connectionTitle>
                    </detailFile>
            </detailFiles>
        </application>
    <!--
    	Here we keep track of pet visits received  
     -->
        <application>
            <classDef>
                <name>PetVisits</name>
                <title>Pet Visits</title>
                <mode>	
                	<add>true</add>
                	<delete>true</delete>
                	<modify>true</modify>
                	<browse>true</browse>
                </mode>
                <generatePortlet>true</generatePortlet>
                <restrictBy>
                	<companyId>true</companyId>
                	<groupId>false</groupId>
                	<userId>false</userId> 
                </restrictBy>
            </classDef>
            <fileDef>
                <name>petVisits</name>
                <fields>
                    <field>
                        <name>petVisitId</name>
                        <title>Visit Id</title>
                        <type>
                            <long>
                                <length>5</length>
                                <signed>false</signed>
                                <nullable>false</nullable>
                            </long>
                        </type>
                        <showFieldInView>false</showFieldInView>
                    </field>
                    <field>
                        <name>petId</name>
                        <title>Pet Id</title>
                        <type>
                            <long>
                                <length>5</length>
                                <signed>false</signed>
                                <nullable>false</nullable>
                            </long>
                        </type>
                        <showFieldInView>false</showFieldInView>
                        <required>true</required>
                    </field>
                    <field>
                    	<name>petVisitDateTime</name>
                    	<title>Visit Date Time</title>
                    	<type>
                    		<datetime></datetime>
                    	</type>
                    	<showFieldInView>true</showFieldInView>
                    </field>
                    <field>
                        <name>petVisitReason</name>
                        <title>Visit Reason</title>
                        <type>
                            <text></text>
                        </type>
                        <showFieldInView>true</showFieldInView>
                        <required>true</required>
                    </field>
                </fields>
            </fileDef>
        </application>
    </applications>
</definition>